<div ng-style="theme.body">
  <div class="tools" data-spy="affix" data-offset-top="10">
    <i ng-click="showPrefBar = !showPrefBar" class="fa fa-medkit fa-2x"></i>
    <ul ng-show="showPrefBar" class="animated fadeIn">
      <li><i class="fa fa-picture-o fa-2x"></i><span>Theme</span>
        <br>
        <div class="item theme-bc" id="theme-bc-day" ng-click="switchTheme($event)"></div>
        <div class="item theme-bc" id="theme-bc-night" ng-click="switchTheme($event)"></div>
      </li>
      <br>
      <hr>
      <li><i class="fa fa-font fa-2x"></i><span>Font Size</span>
        <br>
      </li>
    </ul>
  </div>
  <div class="main-content chapter-content">
    <div class="page-header" ng-style="theme.content">
      <h2>{{chapter.name}}
        <br><small>{{chapter.book_name}} - {{chapter.author}}</small>
        <div id="chapter-link"><div ng-click="locateTo('menu')">Chapters</div> | <div ng-click="locateTo('bookList')">Books</div></div>
      </h2>
    </div>
    <pre ng-style="theme.content">
      {{chapter.content}}
    </pre>
    <nav class="chapter-nav" ng-show="chapter.content">
      <ul class="pager">
        <li class="previous">
          <a ng-click="jumpTo(chapter.id-1)"><span aria-hidden="true">&larr;</span></a>
        </li>
        <li class="next">
          <a ng-click="jumpTo(chapter.id+1)"><span aria-hidden="true">&rarr;</span></a>
        </li>
      </ul>
    </nav>
  </div>
</div>
