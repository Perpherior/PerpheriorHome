<form class="form-horizontal" novalidate shake-that autocomplete="off" name="loginForm">
  <div class="panel panel-default box-shadow ">
    <div class="panel-heading">
      <h3 class="panel-title">
        Sign in
      </h3>
    </div>
    <div class="panel-body">
      <div class="form-group">
        <label class="col-sm-4 control-label">Email</label>
        <div class="col-sm-7">
          <input class="form-control" type="email" ng-model="admin.email" 
            placeholder="Email" name="email"/>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-4 control-label">Password</label>
        <div class="col-sm-7">
          <input class="form-control"
            ng-model="admin.password" type="password" placeholder="Password"
            name="password" />
          </div>
      </div>
      <div class="custom-validation-error" ng-if="unauthorized">
        <span>Email or password may be incorrect!! Try again!</span>
      </div>
      <hr>
      <button class="btn btn-primary" validation-submit="loginForm"
        ng-click="form.submit()">Login</button>
  </div>
</div>
</form>
<p>
  <a href="/signup">Create your free account</a>
</p>